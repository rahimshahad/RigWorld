<% if @review.rig %>
<h1> New Review for <%= @review.rig.name%></h1>
<% else %>
<h1> New Review!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {msg_error: @review} %>

<%= form_for([@review.rig, @review]) do |f|%>
<% if !@review.rig%>
<%= f.label :rig %>
<%= f.collection_select :rig_id, Rig.all, :id, :name %>
<% else %>
<%=f.hidden_field :rig_id%>
<% end %>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.submit %>
<% end  %>